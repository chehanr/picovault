{
	"name": "@picovault/server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js",
		"auth:generate": "bunx @better-auth/cli generate --output ../../packages/db/src/schema/auth.ts",
		"db:push": "bunx @dotenvx/dotenvx run -- bun run --cwd ../../packages/db db:push",
		"db:studio": "bunx @dotenvx/dotenvx run -- bun run --cwd ../../packages/db db:studio",
		"db:generate": "bunx @dotenvx/dotenvx run -- bun run --cwd ../../packages/db db:generate",
		"db:migrate": "bunx @dotenvx/dotenvx run -- bun run --cwd ../../packages/db db:migrate",
		"db:start": "docker compose up -d",
		"db:watch": "docker compose up",
		"db:stop": "docker compose stop",
		"db:down": "docker compose down"
	},
	"dependencies": {
		"@better-fetch/fetch": "^1.1.18",
		"@picovault/auth": "workspace:*",
		"@picovault/db": "workspace:*",
		"dotenv": "^17.2.1",
		"hono": "^4.8.2",
		"pg": "^8.14.1",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.3.4",
		"@types/bun": "^1.2.19",
		"@types/pg": "^8.11.11",
		"tsdown": "^0.12.9",
		"typescript": "^5.9.2"
	}
}
